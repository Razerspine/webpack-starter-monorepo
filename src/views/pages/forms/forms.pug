extends @views/layout/index.pug
include @views/mixins/form-input.pug
include @views/mixins/single-select.pug
include @views/mixins/form-checkbox.pug
include @views/mixins/form-radio.pug
include @views/mixins/form-textarea.pug

block variables
  - title = 'Forms'

append style
  link(rel='stylesheet' href='./style.scss')

block content
  section.section
    h1.title-h1.m-b-4 Forms
    form.form
      +formInput('email', 'email', 'Email', 'example@mail.com', 'email')

      +formInput('password', 'password', 'Password', 'Enter password', 'password')

      +formTextarea('message', 'Message', 'Type your message...', 'message')

      .form-group
        +singleSelect('topic', null, [
          {value: 'support', text: 'Support'},
          {value: 'feedback', text: 'Feedback'},
          {value: 'other', text: 'Other'}
        ])

      +formCheckbox('subscribe', 'Subscribe to newsletter', 'newsletter', 'yes')

      .form-group
        span.form-label Communication method
        +formRadio('contact-email', 'Email', 'contact', 'email', true)
        +formRadio('contact-phone', 'Phone', 'contact', 'phone')
