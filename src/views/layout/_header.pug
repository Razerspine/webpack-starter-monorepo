include @views/mixins/btn.pug
include @views/mixins/single-select.pug

- const logoTitle = 'webpack starter kit';

header.header
  .header__row
    .header__col
      .logo
        img.logo__icon(src='@images/logo.svg' alt='logo' loading='lazy')
        span.logo__title #{logoTitle}
    .header__col.header__col--space
      +btn(
        null,
        'icon',
        'icon-medium',
        {
          type: 'button',
          id: 'themeToggle',
          'aria-label': 'Toggle theme'
        },
        'light-mode'
      )
      +singleSelect('languageSwitcher', null, [
        {value: 'en', label: 'EN'},
        {value: 'uk', label: 'UK'}
      ], 'label', 'value', 'en', null)
